<h2>Further information</h2>

<% if flash[:message] %>
  <p>
    <span class="error"><%= flash[:message] %></span>
  </p>
<% end %>

<form action="/page1bis" method="POST" >
  <ol role="list" class="question-list" >
    <% if session[:has_car] %>
          <ul class="question-item">
            <div class="question-title">Is your car, or the car you can use, a low emission car?</div>
            <div class="question-description">Electric or hybrid cars, such as Tesla or Prius</div>
              <ul>
                <input type="radio" name="has_e_car" value="Yes" id="e_car_yes" role="radio">
                <span class="choice-label">Yes</span>
              </ul>
              <ul>
                <input type="radio" name="has_e_car" value="No" id="e_car_no" role="radio">
                <span class="choice-label">No</span>
              </ul>
          </ul>
    <% end %>
    <% if session[:has_bike] %>
    <br>

          <ul class="question-item">
            <div class="question-title">Is your bike, or the bike you can use, an electric bike?‚Äù</div>
            <div class="question-description"></div>
              <ul>
                <input type="radio" name="has_e_bike" value="Yes" id="e_bike_yes" role="radio">
                <span class="choice-label">Yes</span>
              </ul>
              <ul>
                <input type="radio" name="has_e_bike" value="No" id="e_bike_no" role="radio">
                <span class="choice-label">No</span>
              </ul>
          </ul>
    <% end %>
    <br>
  <div class="ss-item ss-navigate"><table id="navigation-table"><tbody><tr>
    <input type="submit" name="continue" value="Continue &raquo;" id="ss-submit" class="continue-button">
    </tr></tbody></table>
  </div>
  </ol>
  </form>
